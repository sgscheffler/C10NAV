<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000099CC"
    android:padding="@dimen/widget_margin">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="32dp"
        android:layout_height="wrap_content"
        android:background="#F44336"
        android:text="C10:"
        android:textColor="#673AB7" />

    <TextView
        android:id="@+id/txtNAV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_toEndOf="@+id/textView4"
        android:background="#3F51B5"
        android:text="$ 1.70"
        android:textColor="#F44336"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtNAV"
        android:layout_marginTop="0dp"
        android:background="#FFEB3B"
        android:text="Total:"
        android:textColor="#673AB7" />

    <TextView
        android:id="@+id/txtholdings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtNAV"
        android:layout_marginStart="3dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/textView6"
        android:background="#3F51B5"
        android:text="$ 1337"
        android:textColor="#FFC107"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6"
        android:layout_marginTop="0dp"
        android:background="#00BCD4"
        android:text="24h:" />

    <TextView
        android:id="@+id/txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt1"
        android:layout_marginTop="0dp"
        android:background="#00BCD4"
        android:text="7d:" />

    <TextView
        android:id="@+id/txt24h"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtholdings"
        android:layout_marginStart="11dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/txt1"
        android:background="#00BCD4"
        android:text="2.5%"
        android:textColor="#00FF00" />

    <TextView
        android:id="@+id/txt7d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt24h"
        android:layout_marginStart="19dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/txt2"
        android:background="#00BCD4"
        android:text="-12.5%"
        android:textColor="#FF0000" />

</RelativeLayout>